<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/mon1"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_click_color"
        android:text="M"
        app:layout_constraintEnd_toStartOf="@+id/tue2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tue2"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_click_color"
        android:text="Tu"
        app:layout_constraintEnd_toStartOf="@+id/wed3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wed3"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_click_color"
        android:text="W"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/th4"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_click_color"
        android:text="Th"
        app:layout_constraintStart_toEndOf="@+id/wed3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sat6"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_click_color"
        android:text="Sa"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/fri5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fri5"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_click_color"
        android:text="F"
        app:layout_constraintStart_toEndOf="@+id/th4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sun7"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_click_color"
        android:text="Su"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/mon1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>