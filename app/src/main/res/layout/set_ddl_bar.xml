<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/lightGrey">

    <TextView
        android:id="@+id/set_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Set Reminder Deadline"
        android:textColor="@color/pureWhite"
        android:background="?attr/selectableItemBackground"
        android:textSize="@dimen/inst_text_size"/>

    <Switch
        android:id="@+id/sw_ddl"
        android:thumbTint="@color/darkWhite"
        android:trackTint="@color/track_selector_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:shadowColor="#00696666" />

</LinearLayout>